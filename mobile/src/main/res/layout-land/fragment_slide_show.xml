<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/media_player_background">


    <ImageButton
        android:id="@+id/slide_show_start_btn"
        android:layout_width="120dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/ic_slideshow_black_24dp"
        android:background="@drawable/media_player_button"
        android:adjustViewBounds="true"
        android:padding="32dp"
        android:scaleType="fitCenter"
        android:tint="@color/colorPrimary"
        android:elevation="8dp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="257dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0.4" />

    <ImageButton
        android:id="@+id/slide_show_previous_btn"
        android:layout_width="90dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_navigate_before_black_24dp"
        android:background="@drawable/media_player_button"
        android:tint="@color/colorPrimary"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="24dp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toStartOf="@+id/slide_show_start_btn"
        android:layout_marginEnd="0dp"/>

    <ImageButton
        android:id="@+id/slide_show_next_btn"
        android:layout_width="90dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_navigate_next_black_24dp"
        android:background="@drawable/media_player_button"
        android:tint="@color/colorPrimary"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="24dp"
        app:layout_constraintVertical_bias="0.4"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toEndOf="@+id/slide_show_start_btn"
        android:layout_marginStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="0dp"
        app:layout_constraintHorizontal_bias="0.25" />

    <ImageButton
        android:id="@+id/slide_show_previous_no_animation_btn"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_prev_slide_black_24dp"
        android:background="@drawable/media_player_button"
        android:tint="@color/colorPrimary"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@+id/slide_show_end_btn"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="@+id/slide_show_end_btn"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/slide_show_end_btn"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_exit_to_app_black_24dp"
        android:background="@drawable/media_player_button"
        android:tint="@color/colorPrimary"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/slide_show_start_btn"
        app:layout_constraintHorizontal_bias="0.4" />

    <ImageButton
        android:id="@+id/slide_show_next_no_animation_btn"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_next_slide_black_24dp"
        android:background="@drawable/media_player_button"
        android:tint="@color/colorPrimary"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="16dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toEndOf="@+id/slide_show_end_btn"
        app:layout_constraintTop_toTopOf="@+id/slide_show_end_btn"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/slide_show_pen_pointer_btn"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_pen_pointer_black_24dp"
        android:background="@drawable/media_player_button"
        android:tint="@color/colorPrimary"
        android:elevation="4dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <ImageButton
        android:id="@+id/slide_show_arrow_pointer_btn"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_arrow_pointer_black_24dp"
        android:background="@drawable/media_player_button"
        android:tint="@color/colorPrimary"
        android:elevation="4dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/slide_show_pen_pointer_btn"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/slide_show_pen_pointer_btn"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/slide_show_blank_black_slide_btn"
        android:layout_width="32dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_blank_black_slide_black_24dp"
        android:background="@drawable/selectable_background"
        android:tint="@android:color/white"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide_show_blank_white_slide_btn"
        app:layout_constraintBottom_toTopOf="@+id/slide_show_first_slide_btn"
        android:layout_marginBottom="0dp"
        app:layout_constraintDimensionRatio="h,1:1" />

    <ImageButton
        android:id="@+id/slide_show_blank_white_slide_btn"
        android:layout_width="32dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_blank_white_slide_black_24dp"
        android:background="@drawable/selectable_background"
        android:tint="@android:color/white"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@+id/slide_show_last_slide_btn"
        app:layout_constraintBottom_toTopOf="@+id/slide_show_blank_black_slide_btn"
        app:layout_constraintDimensionRatio="h,1:1" />

    <ImageButton
        android:id="@+id/slide_show_first_slide_btn"
        android:layout_width="32dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_first_slide_black_24dp"
        android:background="@drawable/selectable_background"
        android:tint="@android:color/white"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@+id/slide_show_blank_black_slide_btn"
        app:layout_constraintDimensionRatio="h,1:1" />

    <ImageButton
        android:id="@+id/slide_show_last_slide_btn"
        android:layout_width="32dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_last_slide_black_24dp"
        android:background="@drawable/selectable_background"
        android:tint="@android:color/white"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/slide_show_blank_white_slide_btn"
        app:layout_constraintTop_toTopOf="@+id/slide_show_next_btn"
        android:layout_marginTop="0dp"
        app:layout_constraintDimensionRatio="h,1:1" />
</android.support.constraint.ConstraintLayout>