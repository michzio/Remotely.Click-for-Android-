<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:startColor="@color/colorAccent"
                android:endColor="@color/colorPrimaryDark"
                android:angle="270"/>
        </shape>
    </item>
    <item android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="@android:color/white"
                android:endColor="@color/colorDivider"
                android:angle="270"/>
            <stroke android:width="3dp" android:color="@android:color/darker_gray" />
            <corners android:topLeftRadius="100dp" android:topRightRadius="100dp" android:bottomLeftRadius="100dp" android:bottomRightRadius="100dp" />
        </shape>
    </item>
</layer-list>
