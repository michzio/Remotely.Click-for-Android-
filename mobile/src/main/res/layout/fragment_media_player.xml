<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/media_player_background">

    <ImageButton
        android:id="@+id/media_player_play_pause_btn"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/media_player_button"
        app:srcCompat="@drawable/ic_play_pause_black_24dp"
        android:adjustViewBounds="true"
        android:padding="32dp"
        android:scaleType="fitCenter"
        android:tint="@color/colorPrimary"
        android:elevation="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <ImageButton
        android:id="@+id/media_player_stop_btn"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_stop_black_24dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/media_player_play_pause_btn"
        android:background="@drawable/media_player_button"
        android:tint="@color/colorPrimary"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="16dp" />

    <ImageButton
        android:id="@+id/media_player_step_forward_btn"
        android:layout_width="90dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_fast_forward_black_24dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toEndOf="@+id/media_player_play_pause_btn"
        android:layout_marginStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="0dp"
        android:background="@drawable/media_player_button"
        android:tint="@color/colorPrimary"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="24dp"
        app:layout_constraintVertical_bias="0.4" />

    <ImageButton
        android:id="@+id/media_player_step_backward_btn"
        android:layout_width="90dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_fast_rewind_black_24dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toStartOf="@+id/media_player_play_pause_btn"
        android:layout_marginEnd="0dp"
        android:background="@drawable/media_player_button"
        android:tint="@color/colorPrimary"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="24dp"
        app:layout_constraintVertical_bias="0.4" />

    <ImageButton
        android:id="@+id/media_player_skip_previous_btn"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_skip_previous_black_24dp"
        android:background="@drawable/media_player_button"
        android:tint="@color/colorPrimary"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@+id/media_player_stop_btn"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="@+id/media_player_stop_btn"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/media_player_skip_next_btn"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_skip_next_black_24dp"
        android:background="@drawable/media_player_button"
        android:tint="@color/colorPrimary"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="16dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toEndOf="@+id/media_player_stop_btn"
        app:layout_constraintTop_toTopOf="@+id/media_player_stop_btn"
        android:layout_marginTop="0dp" />

    <SeekBar
        android:id="@+id/volume_seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/media_player_volume_seek_bar"
        android:thumb="@drawable/media_player_volume_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/media_player_volume_mute_btn"
        android:layout_width="32dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_volume_mute_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/volume_seek_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:background="@drawable/selectable_background"
        android:tint="@android:color/white"
        android:elevation="4dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp" />

    <ImageButton
        android:id="@+id/media_player_volume_up_btn"
        android:layout_width="32dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_volume_up_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/volume_seek_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:background="@drawable/selectable_background"
        android:tint="@android:color/white"
        android:elevation="4dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp" />

    <ImageButton
        android:id="@+id/media_player_loop_btn"
        android:layout_width="32dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_loop_black_24dp"
        android:background="@drawable/selectable_background"
        android:tint="@android:color/white"
        android:elevation="4dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="64dp" />

    <ImageButton
        android:id="@+id/media_player_shuffle_btn"
        android:layout_width="32dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_shuffle_black_24dp"
        android:background="@drawable/selectable_background"
        android:tint="@android:color/white"
        android:elevation="4dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/media_player_loop_btn"
        app:layout_constraintEnd_toStartOf="@+id/media_player_fullscreen_btn"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/media_player_fullscreen_btn"
        android:layout_width="32dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:srcCompat="@drawable/ic_fullscreen_black_24dp"
        android:background="@drawable/selectable_background"
        android:tint="@android:color/white"
        android:elevation="4dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp" />

</android.support.constraint.ConstraintLayout>