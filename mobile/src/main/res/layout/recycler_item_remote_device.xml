<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/remote_device_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_remote_devices_white_24dp"
        android:tint="@color/textColorSecondary"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/remote_device_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:layout_margin="8dp"
        android:text="Sample Text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/remote_device_image_view" />

    <LinearLayout
        android:id="@+id/remote_device_details_view"
        android:layout_below="@id/remote_device_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@drawable/remote_device_details_background"
        android:visibility="gone">
        <TextView
            android:id="@+id/remote_device_details_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="@string/remote_device_details_name"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/remote_device_details_host_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/white"
            android:text="@string/remote_device_details_host"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/remote_device_details_port_number_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/white"
            android:text="@string/remote_device_details_port_number"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/remote_device_details_connect_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="2dp"
            android:text="@string/remote_device_details_connect"
            android:textSize="16sp"
            android:textStyle="bold"
            android:theme="@style/AppTheme.ButtonLight"/>
    </LinearLayout>
</RelativeLayout>